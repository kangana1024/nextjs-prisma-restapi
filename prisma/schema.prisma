generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  PENDING
  DONE
  DELETE
}

model Todo {
  id        Int        @id @default(autoincrement())
  title     String     @db.VarChar(255)
  detail    String
  status    TodoStatus
  createdAt DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt DateTime   @default(now()) @db.Timestamptz(6)
}
